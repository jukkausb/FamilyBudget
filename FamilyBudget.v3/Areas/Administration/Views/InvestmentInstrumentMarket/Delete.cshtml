@using FamilyBudget.v3.App_Helpers
@model FamilyBudget.v3.Areas.Administration.Models.InvestmentInstrumentMarketModel

@{
    ViewBag.Title = "Удаление рынка интсрумента";
}

<div class="row justify-content-center mb-4">
    <div class="col-md-8 col-md-offset-2">
        <div class="card">
            <div class="card-header text-center py-3">
                <h4 class="m-0 font-weight-bold text-primary">Удалить рынок интсрумента?</h4>
            </div>

            @using (Html.BeginForm())
            {
                <div class="card-body">
                    @Html.Raw(Html.FamilyBudgetValidationSummary())
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Object.ID)
                    @Html.HiddenFor(model => model.Object.Code)
                    @Html.HiddenFor(model => model.Object.Name)
                    @Html.HiddenFor(model => model.Object.DiagramBackgroundColor)
                    @Html.HiddenFor(model => model.Object.DiagramBackgroundHoverColor)
                    @Html.HiddenFor(model => model.Object.DiagramHoverBorderColor)
                    @Html.HiddenFor(model => model.Object.PortfolioPercent)
                    @Html.HiddenFor(model => model.Object.PortfolioPercentDelta)

                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            @Html.DisplayFor(model => model.Object.Code, "_TextValue")
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.DisplayFor(model => model.Object.Name, "_TextValue")
                        </div>
                        <div class="col-md-4 mb-3">
                            @Html.DisplayFor(model => model.Object.DiagramBackgroundColor, "_TextValue")
                        </div>
                        <div class="col-md-4 mb-3">
                            @Html.DisplayFor(model => model.Object.DiagramBackgroundHoverColor, "_TextValue")
                        </div>
                        <div class="col-md-4 mb-3">
                            @Html.DisplayFor(model => model.Object.DiagramHoverBorderColor, "_TextValue")
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.DisplayFor(model => model.Object.PortfolioPercent, "_TextValue")
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.DisplayFor(model => model.Object.PortfolioPercentDelta, "_TextValue")
                        </div>
                        <div class="col-md-12">
                            <div class="row justify-content-between">
                                <div class="col-6">
                                    @{
                                        string queryParams = "/Administration/InvestmentInstrumentMarket" + QueryStringParser.DecodeGridParameters(Model.PageIndex, Model.SortField, Model.SortDirection);
                                        <a class="btn btn-primary" href="@queryParams">Назад к списку рынков инстументов</a>
                                    }
                                </div>
                                <div class="col-6 text-right">
                                    <div>
                                        <button name="submit" type="submit" class="btn btn-danger" value="1">Удалить</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
