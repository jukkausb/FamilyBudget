@using FamilyBudget.v3.App_Helpers
@model FamilyBudget.v3.Areas.Administration.Models.IncomeCategoryListModel

@{
    string returnParameters = QueryStringParser.EncodeGridParameters(Model.PageIndex, Model.SortField, Model.SortDirection);
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="text-center mb-4">
        <h1 class="h3 mb-0 text-gray-800 font-weight-bold">Категории доходов</h1>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-3">
            @Html.ActionLink("Создать категорию доходов", "Create", new { returnParams = @returnParameters }, new { @class = "btn btn-primary pull-right" })
        </div>
        <div class="col-lg-12">
            @{
                if (Model != null)
                {
                    WebGrid grid = WebGridHelpers.CreateWebGridWithJqueryUiStyle(Model.Entities, rowsPerPage: Model.PageSize, canPage: true, canSort: true, defaultSort: "IncomeDate");
                    @grid.GetHtmlJqueryUiStyle(mode: WebGridPagerModes.All, showNoDataFound: true,
                        columns: grid.Columns(
                            grid.Column("Name", "Категория"),
                            grid.Column("Description", "Описание"),
                                        grid.Column(style: "webgrid-editColumn", format: item => Html.ActionLink("Редактировать", "Edit", new { id = item.ID, returnParams = @returnParameters }, new { @class = "btn btn-warning btn-sm btn-table-action" })),
                                        grid.Column(style: "webgrid-deleteColumn", format: item => Html.ActionLink("Удалить", "Delete", new { id = item.ID, returnParams = @returnParameters }, new { @class = "btn btn-danger btn-sm btn-table-action" })
                                )
                            ))
                    ;
                }
            }
        </div>
    </div>
</div>