@using FamilyBudget.v3.App_Helpers
@model FamilyBudget.v3.Areas.Administration.Models.AccountModel

@{
    ViewBag.Title = "Удаление счета";
}

<div class="row justify-content-center mb-4">
    <div class="col-md-8 col-md-offset-2">
        <div class="card">
            <div class="card-header text-center py-3">
                <h4 class="m-0 font-weight-bold text-primary">Удалить счет?</h4>
            </div>

            @using (Html.BeginForm())
            {
                <div class="card-body">
                    @Html.Raw(Html.FamilyBudgetValidationSummary())
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Object.ID)
                    @Html.HiddenFor(model => model.Object.Currency.Code)
                    @Html.HiddenFor(model => model.Object.Name)
                    @Html.HiddenFor(model => model.Object.IsMain)
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Object.CurrencyID)
                            <div class="form-control">
                                @Html.DisplayFor(model => model.Object.Currency.Code)
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Object.Name)
                            <div class="form-control">
                                @Html.DisplayNameFor(model => model.Object.Name)
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Object.IsMain)
                            @Html.Raw(Model.Object.IsMain ? "Да" : "Нет")
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Object.Balance)
                            @Html.Raw(Model.Object.Balance)
                        </div>
                        <div class="col-md-12">
                            <div class="row justify-content-between">
                                <div class="col-6">
                                    @{
                                        string queryParams = "/Administration/Account" + QueryStringParser.DecodeGridParameters(Model.PageIndex, Model.SortField, Model.SortDirection);
                                        <a class="btn btn-primary" href="@queryParams">Назад к списку счетов</a>
                                    }
                                </div>
                                <div class="col-6 text-right">
                                    <div>
                                        <button name="submit" type="submit" class="btn btn-danger" value="1">Удалить</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
