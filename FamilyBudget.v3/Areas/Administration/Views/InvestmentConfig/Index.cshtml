@using FamilyBudget.v3.App_Helpers
@model FamilyBudget.v3.Areas.Administration.Models.InvestmentConfigModel

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="text-center mb-4">
        <h1 class="h3 mb-0 text-gray-800 font-weight-bold">Конфигурация инвестиционного портфеля</h1>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-body">
                    @{
                        WebGrid investmentRulesEtfGrid = WebGridHelpers.CreateWebGridWithJqueryUiStyle(Model.InvestmentRulesEtfListModel.Entities, rowsPerPage: 1000);
                        @investmentRulesEtfGrid.GetHtmlJqueryUiStyle(mode: WebGridPagerModes.All, showNoDataFound: true,
                            columns: investmentRulesEtfGrid.Columns(
                                investmentRulesEtfGrid.Column("Ticker", "Тикер"),
                                investmentRulesEtfGrid.Column("PortfolioPercent", "Целевая доля в портфеле, %"),
                                investmentRulesEtfGrid.Column("PortfolioPercentDelta", "Отклонение, %")
                        ));
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-body">
                    @{
                        WebGrid investmentRulesInstrumentsGrid = WebGridHelpers.CreateWebGridWithJqueryUiStyle(Model.InvestmentRulesInstrumentsListModel.Entities, rowsPerPage: 1000);
                        @investmentRulesInstrumentsGrid.GetHtmlJqueryUiStyle(mode: WebGridPagerModes.All, showNoDataFound: true,
                            columns: investmentRulesInstrumentsGrid.Columns(
                                investmentRulesInstrumentsGrid.Column("Code", "Код"),
                                investmentRulesInstrumentsGrid.Column("PortfolioPercent", "Целевая доля в портфеле, %"),
                                investmentRulesInstrumentsGrid.Column("PortfolioPercentDelta", "Отклонение, %")
                        ));
                    }
                </div>
            </div>
        </div>
    </div>
</div>