@using FamilyBudget.v3.App_Helpers
@model FamilyBudget.v3.Areas.Administration.Models.InvestmentConfigModel

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="text-center mb-4">
        <h1 class="h3 mb-0 text-gray-800 font-weight-bold">Конфигурация инвестиционного портфеля</h1>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-body">
                    @{
                        WebGrid investmentInstrumentGrid = WebGridHelpers.CreateWebGridWithJqueryUiStyle(Model.InvestmentInstrumentListModel.Entities, rowsPerPage: 1000);
                        @investmentInstrumentGrid.GetHtmlJqueryUiStyle(mode: WebGridPagerModes.All, showNoDataFound: true,
                            columns: investmentInstrumentGrid.Columns(
                                investmentInstrumentGrid.Column("Code", "Код"),
                                investmentInstrumentGrid.Column("PortfolioPercent", "Целевая доля в портфеле, %"),
                                investmentInstrumentGrid.Column("PortfolioPercentDelta", "Отклонение, %")
                        ));
                    }
                </div>
            </div>
        </div>
    </div>
</div>