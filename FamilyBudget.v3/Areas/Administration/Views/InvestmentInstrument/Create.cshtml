@using FamilyBudget.v3.App_Helpers
@model FamilyBudget.v3.Areas.Administration.Models.InvestmentInstrumentModel

@{
    ViewBag.Title = "Новый интсрумент";
}
@Scripts.Render("~/bundles/jqueryvalglobalize")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/bootstrap-colorpicker-js")
@Styles.Render("~/bundles/bootstrap-colorpicker-css")

<div class="row justify-content-center mb-4">
    <div class="col-md-8 col-md-offset-2">
        <div class="card">
            <div class="card-header text-center py-3">
                <h4 class="m-0 font-weight-bold text-primary">Новый инструмент</h4>
            </div>

            @using (Html.BeginForm())
            {
                <div class="card-body">
                    @Html.AntiForgeryToken()
                    @Html.Raw(Html.FamilyBudgetValidationSummary())
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            @Html.EditorFor(model => model.Object.Code, "_TextValue")
                        </div>
                        <div class="col-md-4 mb-3">
                            @Html.LabelFor(model => model.Object.TypeID)
                            @Html.DropDownListFor(model => model.Object.TypeID, Model.InvestmentInstrumentTypes, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Object.TypeID)
                        </div>
                        <div class="col-md-4 mb-3">
                            @Html.LabelFor(model => model.Object.MarketID)
                            @Html.DropDownListFor(model => model.Object.MarketID, Model.InvestmentInstrumentMarkets, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Object.MarketID)
                        </div>
                        <div class="col-md-4 mb-3">
                            @Html.EditorFor(model => model.Object.DiagramBackgroundColor, "_ColorPicker")
                        </div>
                        <div class="col-md-4 mb-3">
                            @Html.EditorFor(model => model.Object.DiagramBackgroundHoverColor, "_ColorPicker")
                        </div>
                        <div class="col-md-4 mb-3">
                            @Html.EditorFor(model => model.Object.DiagramHoverBorderColor, "_ColorPicker")
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.EditorFor(model => model.Object.PortfolioPercent, "_IntValue")
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.EditorFor(model => model.Object.PortfolioPercentDelta, "_IntValue")
                        </div>

                        <div class="col-md-12">
                            <div class="row justify-content-between">
                                <div class="col-6">
                                    @{
                                        string queryParams = "/Administration/InvestmentInstrument" + QueryStringParser.DecodeGridParameters(Model.PageIndex, Model.SortField, Model.SortDirection);
                                        <a class="btn btn-primary" href="@queryParams">Назад к списку инструментов</a>
                                    }
                                </div>
                                <div class="col-6 text-right">
                                    <div>
                                        <button name="submit" type="submit" class="btn btn-success" value="1">Сохранить</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
