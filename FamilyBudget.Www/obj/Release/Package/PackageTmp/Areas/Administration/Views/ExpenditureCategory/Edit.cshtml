@using FamilyBudget.Www.App_Helpers
@model FamilyBudget.Www.Areas.Administration.Models.ExpenditureCategoryModel

@{
    ViewBag.Title = "Редактирование категории затрат";
}

@Scripts.Render("~/bundles/jqueryval")

<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
        <div class="panel-heading">
            <b class="page-header">Редактирование категории затрат</b>
        </div>

        @using (Html.BeginForm())
        {
            <div class="panel-body">
                @Html.ValidationSummary(false, "", new {@class = "alert alert-warning alert-dismissable"})
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Object.ID)
                <div class="form-group">
                    @Html.LabelFor(model => model.Object.Name)
                    @Html.TextBoxFor(model => model.Object.Name, new {@class = "form-control"})
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Object.Description)
                    @Html.TextBoxFor(model => model.Object.Description, new {@class = "form-control"})
                </div>

                <div class="form-group">
                    <div>
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>
                </div>
            </div>
        }

        <div class="panel-footer">
            @{
                string queryParams = "/Administration/ExpenditureCategory" + QueryStringParser.DecodeGridParameters(Model.PageIndex, Model.SortField, Model.SortDirection);
                <a id="backToIncomes" href="@queryParams">Назад к списку категорий</a>
            }
        </div>
    </div>
</div>