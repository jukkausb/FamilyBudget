@using FamilyBudget.Www.App_Helpers
@model FamilyBudget.Www.Areas.Administration.Models.ExpenditureCategoryModel

@{
    ViewBag.Title = "Удаление категории затрат";
}

<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
        <div class="panel-heading">
            <b class="page-header">Удалить категорию затрат?</b>
        </div>

        @using (Html.BeginForm())
        {
            <div class="panel-body">
                @Html.ValidationSummary(false, "", new {@class = "alert alert-warning alert-dismissable"})
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Object.ID)
                @Html.HiddenFor(model => model.Object.Name)
                @Html.HiddenFor(model => model.Object.Description)

                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Object.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Object.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Object.Description)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Object.Description)
                    </dd>
                </dl>

                <div class="form-group">
                    <div>
                        <button type="submit" class="btn btn-primary">Удалить</button>
                    </div>
                </div>
            </div>
        }

        <div class="panel-footer">
            @{
                string queryParams = "/Administration/ExpenditureCategory" + QueryStringParser.DecodeGridParameters(Model.PageIndex, Model.SortField, Model.SortDirection);
                <a id="backToIncomes" href="@queryParams">Назад к списку категорий</a>
            }
        </div>
    </div>
</div>