@model FamilyBudget.Www.Models.LoginModel

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@{
    ViewBag.Title = "Аутентификация";
}

<div class="panel-body">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-heading">
                    <i class="fa fa-sign-in fa-fw"></i>
                    Аутентификация
                </div>
            </div>
            <div class="panel-body">
                @using (MvcForm form = Html.BeginForm())
                {
                    @Html.ValidationSummary(false, "", new {@class = "alert alert-warning alert-dismissable"})
                    @Html.AntiForgeryToken()

                    <fieldset>
                        <div class="form-group input-group margin-bottom-sm">
                            <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                            @Html.TextBoxFor(model => model.UserName, new {@class = "form-control", placeholder = "Логин"})
                        </div>
                        <div class="form-group input-group">
                            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                            @Html.PasswordFor(model => model.Password, new {@class = "form-control", placeholder = "Пароль"})
                        </div>
                        <input class="btn btn-lg btn-success btn-block" value="Вход" type="submit">
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>