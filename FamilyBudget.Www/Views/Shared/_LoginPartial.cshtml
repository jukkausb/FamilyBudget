@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-top-links navbar-right">
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                @User.Identity.Name
                <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-messages">
                <li>
                    @Html.ActionLink("Выйти", "Logoff", "User", new {area = ""}, new {data_icon = "gear", @class = "navbar-link"})
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-top-links navbar-right">
        <li class="dropdown">
            @Html.ActionLink("Log in", "Login", "User", null, new {data_icon = "gear", @class = "dropdown-toggle"})
        </li>
    </ul>
}