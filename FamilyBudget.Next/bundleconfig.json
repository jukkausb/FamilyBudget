// Configure bundling and minification for the project.
// More info at https://go.microsoft.com/fwlink/?LinkId=808241
[
  {
    "outputFileName": "wwwroot/css/site.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/Content/*.css",
      "wwwroot/font-awesome/css/*.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/site.min.js",
    "inputFiles": [
      "wwwroot/Scripts/jquery-1.9.1.js",
      "wwwroot/Scripts/globalize/globalize.js",
      "wwwroot/Scripts/globalize/cultures/globalize.culture.ru.js",
      "wwwroot/Scripts/jquery.validate.js",
      "wwwroot/Scripts/globalize/jquery.validate.globalize.js",
      "wwwroot/Scripts/moment*",
      "wwwroot/Scripts/bootstrap*",
      "wwwroot/Scripts/initialize*",
      "wwwroot/Scripts/plugins/ladda/spin*",
      "wwwroot/Scripts/plugins/ladda/ladda*",
      "wwwroot/Scripts/widget-engine*",
      "wwwroot/Scripts/modernizr-*",
      "wwwroot/Scripts/plugins/dataTables/jquery.dataTables*",
      "wwwroot/Scripts/plugins/dataTables/dataTables.bootstrap*",
      "wwwroot/Scripts/metisMenu*",
      "wwwroot/Scripts/plugins/morris/morris*"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optinally generate .map file
    "sourceMap": false
  }
]
